<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D000000"
    tools:context=".ui.personal.RequestLeaveActivity">

    <TextView
        android:id="@+id/request_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="请假课程"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/reason_for_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/reason_for_leave"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/request_class"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Entry"
        android:padding="8dp"
        android:gravity="start"
        android:textSize="20sp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/reason_for_leave" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/submit"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>